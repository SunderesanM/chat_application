{
  "version": 2,
  "builds": [
    {
      "src": "src/index.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",  
      "dest": "src/index.js"
    }
  ],
  "cleanUrls": true,
  "rewrites": [      
    { "source": "/custom-path", "destination": "/api/specific-endpoint" }
  ]
}
